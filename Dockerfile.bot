# Dockerfile para o Telegram Bot
FROM node:20-alpine

WORKDIR /app

# Copiar arquivos de dependências
COPY package*.json ./

# Instalar TODAS as dependências (tsx é devDependency)
RUN npm ci

# Copiar código fonte
COPY src ./src
COPY scripts ./scripts
COPY tsconfig.json ./

ENV NODE_ENV=production

CMD ["npx", "tsx", "scripts/start-bot.ts"]
